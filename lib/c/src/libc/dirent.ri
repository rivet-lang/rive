public struct dirent {
    public d_ino: uint;
    public d_off: uint;
    public d_reclen: uint16;
    public d_type: uint8;
    public d_name: [256]uint8;
}

extern (C) {
	public func opendir(d: [&]uint8) -> ?&dirent;
	public func readdir(d: &dirent) -> ?&dirent;
	public func closedir(d: &dirent) -> int32;
}
