pub struct dirent {
    pub d_ino: uint;
    pub d_off: uint;
    pub d_reclen: uint16;
    pub d_type: uint8;
    pub d_name: [256]uint8;
}

extern (C) {
	pub func opendir(d: [&]uint8) -> ?&dirent;
	pub func readdir(d: &dirent) -> ?&dirent;
	pub func closedir(d: &dirent) -> int32;
}
