import { * } from "c";

#if _AMD64_
// The `stat` definition used by the Linux kernel.
public struct Stat {
    public dev: dev_t;
    public ino: ino_t;
    public nlink: usize;

    public mode: uint32;
    public uid: uid_t;
    public gid: gid_t;
    __pad0: uint32;
    public rdev: dev_t;
    public size: off_t;
    public blksize: isize;
    public blocks: int64;

    public atim: timespec;
    public mtim: timespec;
    public ctim: timespec;
    __unused: [3]isize;
}
#endif

extern (C) {
    public func stat(__file: *uint8, __buf: *mut Stat) int32;
    public func lstat(file: *uint8, buf: *mut Stat) int32;

    public func mkdir(path: *uint8, mode: usize) int32;
}
