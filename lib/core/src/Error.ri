use pkg::traits::ToString;

#[used]
pub class Error /* : ToString */ {
    pub msg: string;

    #[virtual]
    pub func to_string(self) string {
        let type_name = typeof!(self);
        if (self.msg.len == 0) {
            return type_name;
        }
        return "{}: {}".fmt(type_name, self.msg_);
    }
}
