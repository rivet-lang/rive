extern (Rivet) {
    public static mut ARGS: []string;

    func init_string_lits();
    func init_globals();
    func drop_globals();
}

#[export("init_args")] // TODO: `#[no_mangle]`
func init_args(_argc: usize, _argv: [&][&]uint8) {
    unsafe {
        ARGS = @vec(string, _argc);
        mut i: usize := 0;
        while i < _argc : i += 1 {
            ARGS.push(string.from_raw(_argv[i]));
        }
    }
}

func main(
    _argc: int32, _argv: [&][&]uint8,
#if _TESTS_
    mut test_runner: TestRunner
#else
    mod_main: func()
#endif
) {
    setup_signals_handler();
    init_args(@as(usize, _argc), _argv);
#if !_TESTS_ // `init_string_lits` is called after
    init_string_lits();
#endif
    init_globals();
    libcoreIsStarted = true;
#if _TESTS_
    if test_runner.tests.len > 0 {
        test_runner.run();
        test_runner.print_summary_tests();
    }
#else
    mod_main();
#endif
    drop_globals();
}
