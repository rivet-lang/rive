extern (Rivet) {
    pub var mut ARGS: []string;

    proc init_string_lits();
    proc init_globals();
    proc drop_globals();
}

proc init_args(_argc: uint, _argv: [&][&]uint8) {
    unsafe {
        ARGS = []string(cap: _argc);
        mut i: uint := 0;
        while i < _argc : i += 1 {
            ARGS.push(string.from_raw(_argv[i]));
        }
    }
}

$if _TESTS_ {
    proc main(_argc: int32, _argv: [&][&]uint8, mut test_runner: TestRunner) {
        setup_signals_handler();
        init_args(@as(uint, _argc), _argv);

        init_globals();
        runtime_is_started = true;

        if test_runner.tests.len > 0 {
            test_runner.run();
        }

        drop_globals();
    }
} else {
    proc main(_argc: int32, _argv: [&][&]uint8, mod_main: proc()) {
        setup_signals_handler();
        init_args(@as(uint, _argc), _argv);

        init_string_lits();
        init_globals();

        runtime_is_started = true;
        mod_main();

        drop_globals();
    }
}
