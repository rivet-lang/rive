use pkg::process::panic;

pub enum Arch : u8 {
    X86,
    Amd64;

    pub fn from_string(arch: string) ?Arch {
        switch (arch) {
            "i386" => return .X86,
            "amd64" => return .Amd64,
            else => return none
        }
    }
}

/// Returns the current architecture.
pub fn arch() Arch {
#if _X86_
    return .X86;
#elif _AMD64_
    return .Amd64;
#else
    panic("unknown host architecture");
#endif
}
