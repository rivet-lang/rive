pub enum Arch : u8 {
    I386,
    AMD64;

    pub fn from_str(arch: str) ?Arch {
        switch (arch) {
            "i386" => return .I386,
            "amd64" => return .AMD64,
            else => return none
        }
    }
}

/// Returns the current architecture.
pub fn arch() Arch {
    $if (_i386_) {
        return .I386;
    } $else $if (_AMD64_) {
        return .AMD64;
    } $else {
        panic("unknown host architecture");
    }
}
