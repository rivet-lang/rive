pub enum OS : u8 {
    Linux,
    Windows,
    Macos;

    pub fn from_str(name: str) ?OS {
        switch (name) {
            "linux" => return .Linux,
            "windows" => return .Windows,
            "macos" => return .Macos,
            else => return none
        }
    }
}

/// Returns the current operating system.
pub fn os() OS {
    $if (_LINUX_) {
        return .Linux;
    } $else $if (_WINDOWS_) {
        return .Windows;
    } $else {
        panic("unknown host operating system");
    }
}
