use pkg { stdc, process };

pub struct StaticBuffer {
    mut buf: [u8; 25];
    mut len: usize;

    pub fn push(mut self, byte: u8) void {
        if (self.len < self.buf.len) {
            self.buf[self.len] = byte;
            self.len += 1;
        } else {
            process::panic("StaticBuffer::push: cannot push byte (len: {})", self.len);
        }
    }

    pub fn clear(mut self) void {
        while self.len > 0 {
            self.buf[self.len] = 0;
            self.len -= 1;
        }
    }

    pub fn as_u64(self) u64 {
        return unsafe { stdc::strtoul(addr_of!(self.buf[0]), none, 10) };
    }

    pub fn as_string(self) string {
        return unsafe { string::from_raw_with_len(addr_of!(self.buf[0]), self.len) };
    }
}
