import ../token;

#[boxed]
pub enum Stmt {
    Empty(token.Pos),
    Comment(Comment),
    ComptimeIf(ComptimeIf),
    Expr(+Expr),
    VarDecl {
        mut lefts: []+ObjectData;
        mut right: +mut Expr;
        mut scope: +Scope;
        pos: token.Pos;
    },
    While {
        mut cond: +mut Expr;
        mut continue_expr: +mut Expr;
        has_continue_expr: bool;
        mut stmt: +mut Stmt;
        mut else_stmt: +mut Stmt;
        has_else_stmt: bool;
        is_inf: bool;
        pos: token.Pos;
    },
    For {
        mut index: +ObjectData;
        has_index: bool;
        mut values: []+ObjectData;
        mut iterable: +mut Expr;
        mut stmt: +mut Stmt;
        mut scope: +Scope;
        pos: token.Pos;
    },
    Defer {
        pub enum Mode {
            Normal,
            Error,
            Success
        }

        mut expr: +mut Expr;
        mode: Mode;
        pos: token.Pos;
    };

    pub func position(+self) -> token.Pos {
        return match self.+ {
            .Empty(empty_pos) -> empty_pos,
            .Comment(comment) -> comment.pos,
            .ComptimeIf(comptime_if) -> comptime_if.pos,
            .Expr(expr) -> expr.position(),
            .VarDecl(var_decl) -> var_decl.pos,
            .While(while_stmt) -> while_stmt.pos,
            .For(for_stmt) -> for_stmt.pos,
            .Defer(defer_stmt) -> defer_stmt.pos
        };
    }
}
