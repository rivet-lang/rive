import std/traits;
import std/strings;

public enum Type : traits.Stringable {
    Void,
    Never,
    None,
    Basic {
        name: string;
        size: usize;
        is_primitive: bool;
    },
    Anyptr,
    Pointer {
        inner: Type;
        is_managed: bool;
    },
    Array {
        elem_type: Type;
        count: usize;
        size: usize;
    },
    Func {
        args: []Type;
        ret_type: Type;
        size: usize;
    };

    public func to_string(self) string {
        return switch self is {
            .Void => "void",
            .Never => "never",
            .None => "none",
            .Basic as basic => if basic.is_primitive {
                basic.name
            } else {
                "@".concat(basic.name)
            },
            .Anyptr => "anyptr",
            .Pointer as ptr => if ptr.is_managed {
                "^"
            } else {
                "*"
            }.concat(ptr.inner.to_string()),
            .Array as arr => "[{}]{}".fmt(arr.count, arr.elem_type),
            .Func as fn => {
                mut sb := strings.Builder.from_string("*func(");
                for i, arg in fn.args {
                    sb.write_string(arg.to_string());
                    if i < fn.args.len - 1 {
                        sb.write_string(", ");
                    }
                }
                sb.write_fmt(") {}", fn.ret_type);
                sb.to_string()
            }
        };
    }
}
