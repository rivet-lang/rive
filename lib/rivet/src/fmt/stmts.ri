import ../ast;

extend Formatter {
    func format_stmts(mut self, stmts: []ast.Stmt) {
        self.indent += 1;
        for stmt in stmts {
            self.format_stmt(stmt);
        }
        self.indent -= 1;
    }

    func format_stmt(mut self, stmt: ast.Stmt) {
        match stmt {
            .Comment(comment) -> self.format_comment(comment, has_nl: true),
            .Expr(expr) -> self.format_expr(expr),
            else -> {}
        }
    }
}
