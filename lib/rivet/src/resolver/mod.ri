import ../ast;
import ../prefs;

[boxed]
public struct Resolver {
    mut table: ast.Table;
    mut prefs: prefs.Prefs;

    public func resolve(mut self, source_files: []ast.SourceFile) {
        @ignore_not_mutated_warn(self);
        Register(self.table, self.prefs).walk_files(source_files);
    }
}
