var keywords_table := kind_strings[@as(uint, Kind.KeywordBegin):];

pub enum Kind < traits.Stringable {
    Unknown, // unknown
    EndOfFile, // end of file
    DocComment, // doc-comment
    Comment, // comment
    Name, // name
    Number, // number
    Char, // character
    String, // string
    Plus, // +
    Minus, // -
    Mul, // *
    Div, // /
    Mod, // %
    DeclAssign, // :=
    Assign, // =
    PlusAssign, // +=
    MinusAssign, // -=
    MulAssign, // *=
    DivAssign, // /=
    ModAssign, // %=
    AmpAssign, // &=
    PipeAssign, // |=
    XorAssign, // ^=
    Eq, // ==
    Ne, // !=
    Lt, // <
    Gt, // >
    Le, // <=
    Ge, // >=
    Lshift, // <<
    Rshift, // >>
    Dot, // .
    DotDot, // ..
    Ellipsis, // ...
    Hash, // #
    At, // @
    Dollar, // $
    Arrow, // ->
    Comma, // ,
    Colon, // :
    Semicolon, // ;
    Question, // ?
    OrElse, // ??
    Bang, // !
    Amp, // &
    Pipe, // |
    Xor, // ^
    BitNot, // ~
    LogicalAnd, // &&
    LogicalOr, // ||
    Lbrace, // {
    Rbrace, // }
    Lbracket, // [
    Rbracket, // ]
    Lparen, // (
    Rparen, // )

    KeywordBegin,
    // ========== keywords ==========
    KwAlias, // alias
    KwAs, // as
    KwBreak, // break
    KwCatch, // catch
    KwConst, // const
    KwContinue, // continue
    KwDefer, // defer
    KwElse, // else
    KwEnum, // enum
    KwExtend, // extend
    KwExtern, // extern
    KwFalse, // false
    KwProc, // proc
    KwFor, // for
    KwIf, // if
    KwImport, // import
    KwIn, // in
    KwIs, // is
    KwMut, // mut
    KwNone, // none
    KwNotIn, // !in
    KwNotIs, // !is
    KwPub, // pub
    KwReturn, // return
    KwSelf, // self
    KwSelfTy, // Self
    KwStruct, // struct
    KwMatch, // match
    KwTest, // test
    KwThrow, // throw
    KwTrait, // trait
    KwTrue, // true
    KwUnsafe, // unsafe
    KwVar, // var
    KwWhile, // while
    // ==============================

    KeywordEnd;

    #[inline]
    pub proc lookup(str: string) -> Self {
        for &km in keywords_table {
            if km.value == str {
                return km.key;
            }
        }
        return .Name;
    }

    #[inline]
    pub proc single(self) -> Kind {
        return match self {
            .PlusAssign -> .Plus,
            .MinusAssign -> .Minus,
            .MulAssign -> .Mul,
            .DivAssign -> .Div,
            .ModAssign -> .Mod,
            .AmpAssign -> .Amp,
            .PipeAssign -> .Pipe,
            .XorAssign -> .Xor,
            else -> self
        };
    }

    #[inline]
    pub proc is_start_of_type(self) -> bool {
        return self in [
            .Bang, .Name, .Lparen, .Amp, .Mul, .Lbracket, .Question, .KwSelfTy,
            .KwProc
        ];
    }

    #[inline]
    pub proc is_assign(self) -> bool {
        return self in [
            .DeclAssign, .Assign, .PlusAssign, .MinusAssign, .MulAssign, .DivAssign,
            .ModAssign, .AmpAssign, .PipeAssign, .XorAssign
        ];
    }

    #[inline]
    pub proc is_relational(self) -> bool {
        return self in [
            .Eq, .Ne, .Lt, .Gt, .Le, .Ge, .KwIs, .KwNotIs, .KwIn, .KwNotIn
        ];
    }

    pub proc to_string(&self) -> string {
        for &km in kind_strings {
            if km.key == self.* {
                return km.value;
            }
        }
        return "unknown-kind";
    }
}

#[inline]
pub proc is_keyword(lit: string) -> bool {
    return Kind.lookup(lit) != .Name;
}

#[inline]
pub proc is_overloadable_operator(kind: Kind) -> bool {
    return kind in [.Plus, .Minus, .Mul, .Div, .Mod, .Eq, .Ne, .Lt, .Gt, .Le, .Ge];
}

#[inline]
pub proc overloadable_operator_name(kind: Kind) -> string {
    return match kind {
        .Plus -> "_add_",
        .Minus -> "_sub_",
        .Mul -> "_mul_",
        .Div -> "_div_",
        .Mod -> "_mod_",
        .Eq -> "_eq_",
        .Ne -> "_ne_",
        .Lt -> "_lt_",
        .Gt -> "_gt_",
        .Le -> "_le_",
        .Ge -> "_ge_",
        else -> "_unknown_operator_"
    };
}
