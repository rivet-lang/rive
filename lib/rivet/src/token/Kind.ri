    // keywords
    KindMap(.KwAlias, "alias"),
    KindMap(.KwAnd, "and"),
    KindMap(.KwAs, "as"),
    KindMap(.KwBreak, "break"),
    KindMap(.KwCatch, "catch"),
    KindMap(.KwComptime, "comptime"),
    KindMap(.KwConst, "const"),
