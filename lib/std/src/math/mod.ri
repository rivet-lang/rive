/// Returns the number of digits in the number passed.
pub func count_digits(number: int64) -> int32 {
	if number == 0 {
		return 1;
	}
	mut n := number;
	mut c := 0;
	while n != 0 {
		n = n / 10;
		c += 1;
	}
	return c;
}
