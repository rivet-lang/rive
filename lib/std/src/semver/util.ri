func is_valid_string(input: string) bool {
    for c in input.as_bytes() {
        if !(c.is_letter() or c.is_digit() or c == b'.' or c == b'-') {
            return false;
        }
    }
    return true;
}

func is_valid_number(input: string) bool {
    for c in input.as_bytes() {
        if !c.is_digit() {
            return false;
        }
    }
    return true;
}
