static myVar = 1;
const MY_CONST = 5;

test "implicitly typed variable" {
    @assert(myVar == 1);
}

test "implicitly typed constant" {
    @assert(MY_CONST == 5);
}

static myArray = [1, 2, 3, 4]!;

test "global static array" {
    @assert(myArray.len == 4);
    @assert(myArray[0] == 1);
    @assert(myArray[1] == 2);
    @assert(myArray[2] == 3);
    @assert(myArray[3] == 4);
}
