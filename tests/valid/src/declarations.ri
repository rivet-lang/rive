var my_var := 1;
const MY_CONST := 5;

test "implicitly typed variable" {
    @assert(my_var == 1);
}

test "implicitly typed constant" {
    @assert(MY_CONST == 5);
}

var my_array := [1, 2, 3, 4];

test "global var array" {
    @assert(my_array.len == 4);
    @assert(my_array[0] == 1);
    @assert(my_array[1] == 2);
    @assert(my_array[2] == 3);
    @assert(my_array[3] == 4);
}
