func ret_none() ?int32 {
    return 3;
}

func ret_err() !int32 {
    return 3;
}

test "guard expression with mutable variable" {
    if mut val := ret_none() {
        @assert(val == 3);
        val += 2;
        @assert(val == 5);
    }
}

test "`if` expression with guard expression" {
    if val := ret_none() {
        @assert(val == 3);
    }

    @assert(if val := ret_none() {
        val == 3
    } else {
        false
    });

    if val := ret_none(); val != 3 {
        @assert(false);
    }

    @assert(if val := ret_none(); val == 3 {
        true
    } else {
        false
    });

    if val := ret_err() {
        @assert(val == 3);
    }
}

test "`while` expression with guard expression" {
    while val := ret_none() {
        @assert(val == 3);
        break;
    }

    while val := ret_none(); val == 3 {
        @assert(val == 3);
        break;
    }
}

test "`switch` expression with guard expression" {
    switch val := ret_none() {
        3 => @assert(true),
        else => @assert(false)
    }

    switch val := ret_none(); val == 3 {
        3 => @assert(true),
        else => @assert(false)
    }

    switch val := ret_err() {
        3 => @assert(true),
        else => @assert(false)
    }

    switch val := ret_none(); val == 3 {
        3 => @assert(true),
        else => @assert(false)
    }
}

test "guard expression with options" {
    x: ?int32 := 100;
    if y := x {
        @assert(y == 100);
    } else {
        @assert(false);
    }
}
