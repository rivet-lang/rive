test "`nil` literal" {
    let x: ?i32 = nil;
    assert!((x ?? 5) == 5);
}

test "operator `??`" {
    let mut x: ?i32 = nil;
    assert!((x ?? 5) == 5);
    x = 1;
    assert!((x ?? 5) == 1);
}

test "guard expr with optionals" {
    let mut x: ?i32 = 100;
    if let y = x {
        assert!(y == 100);
    } else {
        assert!(false);
    }
}
