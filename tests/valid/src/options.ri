test "`none` literal" {
    x: ?int32 := none;
    @assert(x is none);
}

test "operator `??`" {
    mut x: ?int32 := none;
    @assert((x ?? 5) == 5);
    x = 1;
    @assert((x ?? 5) == 1);
}

test "operator `?`" {
    x: ?int32 := 5;
    @assert(x? == 5);
}

struct Option {
    a: ?int32;
}

test "option fields" {
    opt := Option();
    @assert(opt.a is none);

    opt2 := Option(a: 5);
    @assert(opt2.a !is none);
    @assert(opt2.a? == 5);
}
