test "creating slices from arrays" {
    arr := [1, 2, 3, 4];
    slice := arr[:];
    @assert(slice[0] == 1);
    @assert(slice[1] == 2);
    @assert(slice[2] == 3);
    @assert(slice[3] == 4);
}

test "creating slices from dynamic arrays" {
    arr := ^[1, 2, 3, 4];
    slice := arr[:];
    @assert(slice[0] == 1);
    @assert(slice[1] == 2);
    @assert(slice[2] == 3);
    @assert(slice[3] == 4);
}
