test "str.fmt()" {
    assert!("true: {}".fmt(true) == "true: true");
    assert!("false: {}".fmt(false) == "false: false");

    assert!("here is a number: {}".fmt(5) == "here is a number: 5");

    assert!(
        "reverse order: {2}, {1}, {0}".fmt(1, 2, 3) == "reverse order: 3, 2, 1"
    );

#if !_WINDOWS_
    assert!("rune: `{}`".fmt('Á') == "rune: `Á`");
#endif
}
