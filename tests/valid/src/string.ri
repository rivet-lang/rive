import c/libc;

test "string index" {
    str := "String Literal";
    @assert(str[0] == b'S');

    ch := "String Literal"[0];
    @assert(ch == b'S');
}

test "byte string literal" {
    bstr := b"Abcdef";
    @assert(bstr.len == 6);
    @assert(bstr[0] == b'A');
    @assert(bstr[5] == b'f');
}

test "C string literal" {
    pstr := c"Hello World!";
    @assert(unsafe { libc::strlen(pstr) } == 12);
}

test "raw string literal" {
    rstr := r"Hello World\n";
    @assert(rstr.len == 13);
    @assert(rstr[11] == b'\\');
    @assert(rstr[12] == b'n');
}
