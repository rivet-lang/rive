test "while statement" {
    // Rivet only has 1 way to write loops: `while`, which always executes,
    // until the given condition is false.
    var x = 0;
    while { // infinite loop
        x++;
        if (x == 5) {
            break;
        }
    }
    assert!(x == 5);

    while (x < 10) {
        x++;
    }
    assert!(x == 10);
}
